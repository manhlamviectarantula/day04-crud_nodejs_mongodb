<!DOCTYPE html>
<html>

<head>
  <title>Danh sách sản phẩm</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>Danh sách sản phẩm</h1>
  <a href="/form-add"><button>Thêm sản phẩm</button></a> <br>
  <!-- <%= %> -->
  <table border="1" style="margin-top: 20px;">
    <tr>
      <!-- <th>ID</th> -->
      <th>Tên</th>
      <th>Giá</th>
      <th>Hình</th>
      <th colspan="3">ACTION</th>
    </tr>
    <% products.forEach(item=> { %>
      <tr>
        <td class="namesp"><%= item.name %></td>
        <td><%= item.price %></td>
        <td><img width="100%" height="100px" src="/images/<%= item.image %>" alt=""></td>
        <td><a href="/detail-product/<%= item._id %>">Chi tiết</a></td>
        <td><a href="/form-update/<%= item._id %>">Sửa</a></td>
        <td><a href="/form-delete/<%= item._id %>">Xóa</a></td>
      </tr>
    <% }) %>
  </table>
</body>

</html>